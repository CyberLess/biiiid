{
    "build": {
        "html": "dist/",
        "js": "dist/app/js/",
        "css": "dist/app/css/",
        "img": "dist/app/img/",
        "attach": "dist/",
        "api": "dist/app/api/",
        "media": "dist/app/media/",
        "svg": "dist/app/icons/",
        "fonts": "dist/app/fonts/"
    },
    "src": {
        "html": "src/pug/pages/**/*.pug",
        "js": "src/js/app.js",
        "css": "src/sass/app.scss",
        "img": "src/img/*.{jpg,png}",
        "attach": ["src/attach/**/.*", "src/attach/**/*.*"],
        "api": ["src/api/**/.*", "src/api/**/*.*"],
        "media": ["src/media/**/.*", "src/media/**/*.*"],
        "svg": "src/icons/**/*.svg",
        "fonts": "src/fonts/*.*"
    },
    "watch": {
        "html": "src/pug/**/*.pug",
        "js": "src/js/**/*.js",
        "css": "src/sass/**/*.scss",
        "img": "src/img/**/*.*",
        "svg": "src/icons/*.svg",
        "attach": ["src/attach/**/.*", "src/attach/**/*.*"],
        "api": ["src/api/**/.*", "src/api/**/*.*"],
        "media": ["src/media/**/.*", "src/media/**/*.*"],
        "fonts": "src/fonts/**/*.*"
    } 	
}